import AsyncStorage from '@react-native-async-storage/async-storage';
import languages, { Language } from '@/constants/languages';

// Export a function to clear old language storage if needed
export const clearLanguageStorage = async () => {
  try {
    // Clear old storage keys
    await AsyncStorage.removeItem('language-storage');
    await AsyncStorage.removeItem('i18n-language');
    console.log('Old language storage cleared successfully');
  } catch (error) {
    console.warn('Error clearing old language storage:', error);
  }
};

